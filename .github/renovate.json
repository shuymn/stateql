{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^Taskfile\\.yml$/",
        "/^lefthook\\.yml$/",
        "/^\\.github\\/workflows\\/ci\\.yml$/"
      ],
      "matchStrings": [
        "(?<currentValue>nightly-\\d{4}-\\d{2}-\\d{2})"
      ],
      "depNameTemplate": "rust-nightly",
      "datasourceTemplate": "custom.rustNightly",
      "versioningTemplate": "rust-release-channel"
    }
  ],
  "customDatasources": {
    "rustNightly": {
      "defaultRegistryUrlTemplate": "https://static.rust-lang.org/dist/channel-rust-nightly.toml",
      "format": "toml",
      "transformTemplates": [
        "{\"releases\":[{\"version\":\"nightly-\" & date}]}"
      ]
    }
  }
}
